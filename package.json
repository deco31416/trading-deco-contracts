{
  "name": "trading-deco-contracts",
  "version": "1.0.0",
  "description": "Smart Contracts for Trading Deco Platform - BSC Deployment",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network bscTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network bscMainnet",
    "verify:testnet": "hardhat run scripts/verify.ts --network bscTestnet",
    "verify:mainnet": "hardhat run scripts/verify.ts --network bscMainnet",
    "setup:testnet": "hardhat run scripts/setup-roles.ts --network bscTestnet",
    "setup:mainnet": "hardhat run scripts/setup-roles.ts --network bscMainnet",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.ts' 'test/**/*.ts'",
    "lint": "solhint 'contracts/**/*.sol'"
  },
  "keywords": [
    "smart-contracts",
    "solidity",
    "hardhat",
    "bsc",
    "binance-smart-chain",
    "erc20",
    "defi",
    "trading"
  ],
  "author": "Trading Deco Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.2",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  }
}
